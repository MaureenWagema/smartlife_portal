<div data-options="dxView : { name: 'AgentPolicies', title: '', disableCache: true } " >
    <div data-options="dxContent : { targetPlaceholder: 'content' } " class="dx-content-background">

        <div id="loadpanel" data-bind="dxLoadPanel: { message: 'Loading...', visible: LoadPanelShown }"></div>

        <div align="center" class="dx-fieldset-header">POLICIES</div>
        <div id="gridContainer" data-bind="dxDataGrid: {
             dataSource: policies_Store,
             wordWrapEnabled: true,
             showColumnHeaders:true,
             columnHidingEnabled: true,
             columns: policies_columns ,
             height: '100%', width: '100%',
             scrolling:{mode:'virtual'},
             paging: {enabled: false},
             searchPanel: { visible: true, width: 350 },
             headerFilter: { visible: true },
                                filterRow: {
                                    visible: true,
                                    applyFilter: 'auto',
                                },
             }">
            <div data-options="dxTemplate:{ name:'cellTemplate' }">
                <div class="img-container">
                    <img data-bind="attr:{src: $data.value}" />
                </div>
            </div>
        </div>

        <div data-bind="dxToast: {
                    message: toast_msg,
                    type: toast_type,
                    displayTime: 3000,
                    visible: isToastVisible
                }"></div>

    </div>
</div>